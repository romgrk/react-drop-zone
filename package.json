{
  "name": "react-drop-zone",
  "version": "4.3.2",
  "description": "Simple & elegant dropzone component",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "cd src && babel *.js -d ../dist && cp *.css ../dist",
    "build-test": "webpack",
    "build-all": "npm run build && npm run build-test"
  },
  "keywords": [
    "dropzone",
    "file",
    "drag-and-drop",
    "react",
    "file-drop",
    "drag",
    "drop"
  ],
  "author": "romgrk.cc@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/romgrk/react-drop-zone"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-transform-spread": "^7.12.13",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-react": "^7.12.13",
    "prop-types": "^15.6.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-spread"
    ]
  }
}
